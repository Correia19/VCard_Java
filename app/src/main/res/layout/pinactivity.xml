<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0A0A0 "
    tools:context=".PinActivity">

    <Button
        android:id="@+id/buttonLogoutAccount"
        android:layout_width="180dp"
        android:layout_height="52dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="16dp"
        android:width="150dp"
        android:backgroundTint="#B50505"
        android:minWidth="250dp"
        android:text="Logout"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/validationErrorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="11dp"
        android:width="250dp"
        android:text="Dados Invalidos ou Incorretos"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/pinInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pinInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="28dp"
        android:width="150dp"
        android:background="@drawable/rounded_input_box"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="App PIN"
        android:inputType="textPassword"
        android:lineHeight="50dp"
        android:minWidth="125dp"
        android:minHeight="50dp"
        android:padding="@dimen/cardview_default_radius"
        android:paddingStart="@dimen/cardview_default_radius"
        android:paddingLeft="@dimen/cardview_default_radius"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="1"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLoginFromPin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="OK"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogoutAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button16" />

    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="5"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button13"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="3"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="6"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogoutAccount"
        app:layout_constraintEnd_toStartOf="@+id/buttonLoginFromPin"
        app:layout_constraintStart_toEndOf="@+id/button15" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="4"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button15"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_input_delete"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogoutAccount"
        app:layout_constraintEnd_toStartOf="@+id/button16"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="9"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoginFromPin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button13" />

    <Button
        android:id="@+id/button13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="8"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintStart_toEndOf="@+id/button12" />

    <Button
        android:id="@+id/button12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="7"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintEnd_toStartOf="@+id/button13"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D9D9D9 "
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="10dp"
        android:text="2"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/validationErrorAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotaes" />

</androidx.constraintlayout.widget.ConstraintLayout>