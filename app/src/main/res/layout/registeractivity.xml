<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0A0A0 "
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/buttonLoginFromRegist"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#448FA9"
        android:text="Login"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonLoginFromRegister"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="114dp"
        android:width="250dp"
        android:backgroundTint="#D9D9D9 "
        android:minWidth="250dp"
        android:text="Create vCard"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/numberInputRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="17dp"
        android:width="250dp"
        android:background="@drawable/rounded_input_box"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        android:lineHeight="50dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:padding="@dimen/cardview_default_radius"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/passwordInputRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/pinInputRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="65dp"
        android:width="250dp"
        android:background="@drawable/rounded_input_box"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="App PIN"
        android:inputType="number"
        android:lineHeight="50dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:padding="@dimen/cardview_default_radius"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoginFromRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/passwordInputRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="17dp"
        android:width="250dp"
        android:background="@drawable/rounded_input_box"
        android:elegantTextHeight="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:lineHeight="50dp"
        android:minWidth="250dp"
        android:minHeight="50dp"
        android:padding="@dimen/cardview_default_radius"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toTopOf="@+id/pinInputRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="37dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/validationError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logotaes" />

    <TextView
        android:id="@+id/validationError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="13dp"
        android:width="250dp"
        android:text="Dados Invalidos ou Incorretos"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/numberInputRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>